{
    "info": {
        "name": "User Registration Module API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"tejas@example.com\",\n    \"first_name\": \"Tejas\",\n    \"last_name\": \"Reddy\",\n    \"dob\": \"2001-08-25\",\n    \"doj\": \"2024-08-01\",\n    \"address\": \"Hyderabad\",\n    \"comment\": \"New User\",\n    \"active\": true,\n    \"password\": \"Tejas@123\"\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/user/register",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "user",
                        "register"
                    ]
                }
            }
        },
        {
            "name": "Login User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"tejas@example.com\",\n    \"password\": \"Tejas@123\"\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/user/login",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "user",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "Change Password",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_jwt_token_here>"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"old_password\": \"Tejas@123\",\n    \"new_password\": \"Tejas@456\"\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/user/change-password",
                    "protocol": "http",
                    "host": [
                        "127.0.0.1"
                    ],
                    "port": "8000",
                    "path": [
                        "user",
                        "change-password"
                    ]
                }
            }
        }
    ]
}
